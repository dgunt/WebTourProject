
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - SKY TRAVEL</title>
    <link rel="shortcut icon" href="~/icon.ico" type="image/x-icon" />
    <link href="~/wwwroot/CSS/Style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @{ var user = Session["Taikhoan"] as WebTourProject.Models.KHACHHANG;}
    <div id="page">
        <div id="header">
            <div id="logo">
                <img src="~/wwwroot/images/big_img.jpg" alt="" border="0" />&nbsp;&nbsp;
                <a href="">
                    <img src="~/wwwroot/images/logo.png" alt="Nhà sách Minh Sơn" border="0" />
                </a>
            </div>
            <div id="menung">
                <ul>
                    <li><a href="/Home/Index"><span>Trang chủ</span></a> </li>
                    <li><a href="/Home/About"><span>Giới thiệu</span></a> </li>
                    <li><a href="/Home/Contact"><span>Liên hệ</span></a> </li>
                    @{
                        if (user == null)
                        {
                            <li><a href="/Nguoidung/Dangky"><span>Đăng ký</span></a> </li>
                            <li><a href="/Nguoidung/Dangnhap"><span>Đăng nhập</span></a> </li>
                        }
                        else
                        {
                            <li><a href="/Giohang/Giohang"><span>Giỏ hàng</span></a> </li>
                            <li><a href="#"><span>Xin chào: @user.HoTen</span></a></li>
                            <li><a href="/Nguoidung/Dangxuat"><span>Đăng xuất</span></a> </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div id="main">
            <div id="content">
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            <p>
                &copy; Copyright : @DateTime.Now.Year <br />
                ASP.NET MVC project
            </p>
            <p>
                Học lập trình<br />
                Khoa CNTT - ĐHCN Hà Nội<br />
                Minh Khai, Từ Liêm, Hà Nội
            </p>
        </div>
    </div>
</body>
</html>
