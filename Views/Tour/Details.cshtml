
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #Datmua a{
        clear:both;
        background-color:red;
        color: white;
        width:120px;
        height:35px;
        display:block;
        float:left;
        text-align:center;
        padding-top:10px;
        text-decoration:none;
        font-weight:bold;
        font-size:14pt;
    }
    #Datmua a:hover{
        background-color:gray;
        color:red;
    }
</style>
<h2>THÔNG TIN CHI TIẾT TOUR</h2>
<br />
<table border="0" style="width:100%">
    <tr>
        <td style="width:60%" valign="top">
            <h1>Địa điểm @Model.Tensach</h1><br />
            <p style="text-align:justify"><span style="font-size:18pt"><b>Mô tả:</b>@Model.Mota</span></p><br />
            <p style="font-size:18pt"><b>Giá vé:</b><span style="color:red">@String.Format("{0:0,0}", Model.Giaban) VNĐ</span><b>/1 người</b> </p> <br />
            <div id="Datmua">
                <a href="@Url.Action("ThemGiohang","GioHang",new {@iMasach=Model.Masach,@strURL= Request.Url.ToString()})">ĐẶT VÉ</a>
            </div>
        </td>
        <td style="width:40%">
            <img src="~/wwwroot/images/@Model.Anhbia" width="300" />
        </td>
    </tr>
</table>
<br />


